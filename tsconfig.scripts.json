{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-scripts",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["scripts/**/*.ts"]
}